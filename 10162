import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		int Time = sc.nextInt();
		int a,b,c;
		
		a = Time/300;
		b = (Time - a*300)/60;
		c = (Time - a*300 - b*60)/10;
		
		if(Time - a*300 - b*60 - c*10 != 0)
			System.out.print(-1);
		else
			System.out.printf("%d %d %d",a,b,c);
		
		
	}
		
}
